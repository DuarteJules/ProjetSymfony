{% extends 'base.html.twig' %}


{% block title %}Hello CompanyController!{% endblock %}

{% block body %}

    <div class="container p-2">
        <h1>Company List</h1>
        <ul class="list-group">
            {% for company in companies %}

                <a href="{{ path('edit_company', {id: company.id}) }}"> <li class="list-group-item">{{ company.name }} </li></a>

            {% endfor %}
        </ul>
        <input type="button" onclick="location.href='{{ path('new_company') }}';" value="Ajouter une company" class="btn btn-primary mt-2"/>
    </div>

{% endblock %}
