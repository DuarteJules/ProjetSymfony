{% extends 'base.html.twig' %}

{% block body %}
    <h2>Liste de candidates </h2>
    <ul>
        {% for candidate in candidates %}
        <li class="p-2">
            {{ candidate.name }}
            <a class="btn btn-primary" href="{{ path('candidate_details', {id: candidate.id}) }}">Profile</a>
            <a class="btn btn-primary" href="{{ path('edit_candidate', {id: candidate.id}) }}">Edit Profile</a>
            <a class="btn btn-primary" href="{{ path('delete_candidate', {id: candidate.id}) }}">Delete Profile</a>
            <br>
        </li>
        {% endfor %}
    </ul>

{% endblock %}