{% extends 'base.html.twig' %}

{% block nav %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/company">Coding Recrute</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('new_company') }}"><span class="sr-only">Create Company</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('new_job') }}">Create Job</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('new_candidate') }}">Create Candidate</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="{{ path('new_skills') }}">Create Skill</a>
                </li>
            </ul>
        </div>
    </nav>
{% endblock %}

{% block body %}
    <div class="container p-5">

        <h2>Liste de candidates </h2>
        <ul>
            {% for candidate in candidates %}
                <li class="p-2">
                    {{ candidate.name }}
                    <a class="btn btn-primary" href="{{ path('candidate_details', {id: candidate.id}) }}">Profile</a>
                    <a class="btn btn-primary" href="{{ path('edit_candidate', {id: candidate.id}) }}">Edit Profile</a>
                    <a class="btn btn-primary" href="{{ path('delete_candidate', {id: candidate.id}) }}">Delete Profile</a>
                    <br>
                </li>
            {% endfor %}
        </ul>

    </div>


{% endblock %}